@model IndexViewModel
@{
  ViewData["Title"] = "Profile";
  ViewData.AddActivePage(ManageNavPages.Index);
}
<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
  <div class="col-md-6">
    <form method="post">
      <div asp-validation-summary="All" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" readonly="@(string.IsNullOrEmpty(Model.Username) ? null : "readonly" )" />
        @if (string.IsNullOrEmpty(Model.Username))
        {
          <p class="help-block">
            You may set your username, which will allow you to set a password and sign in without using an external account. Once you've picked a username
            you will not be allowed to change it. Usernames based on your name (first or last) are preferred.
          </p>
        }
      </div>
      <div class="form-group">
        <label asp-for="Email"></label>
        @if (Model.IsEmailConfirmed)
        {
          <div class="input-group">
            <input asp-for="Email" class="form-control" />
            <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
          </div>
        }
        else
        {
          <input asp-for="Email" class="form-control" readonly="@(Model.IsMember ? "readonly" : null)" />
          @if (Model.IsMember)
          {<p class="help-block">Copied from database</p>}
          <a asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</a>
        }
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly="@(Model.IsMember ? "readonly" : null)" />
        @if (Model.IsMember)
        {<p class="help-block">Copied from database</p>}
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
      </div>
      <button type="submit" class="btn btn-default js-click-disable">Save</button>
    </form>
  </div>
</div>
@section Scripts {
  @await Html.PartialAsync("_ValidationScriptsPartial")
}
